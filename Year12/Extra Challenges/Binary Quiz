
print("This is a binary quiz")

print("A variety of different denary numbers will appear and you will be tasked with translating them into binary")

while True:

    for i in range(5):

        import random

        Denary_Number = random.randrange(1,150)

    print("Turn" )

    print(Denary_Number)

    print("into Binary")

    Proper_Answer = bin(Denary_Number)

    Player_Guess = input("Please enter the binary for this denary number:")

    if Player_Guess == (Proper_Answer[2::]):

        print("You are correct")

    else:

        print("Sadly that is wrong. Try again")



