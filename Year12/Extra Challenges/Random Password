import random
ending_Character = random.randrange(1,1000)
password = input("Would you like a random password generated?")
if password == ("Yes" or "yes"):
    centred_around = input("What would like you password to be centred around? It can be your favorite color, place or animal")
    shuffled_word = random.shuffle(centred_around)
    result = ''.join(centred_around)
    print("Your password is:")
    print(shuffled_word, ending_Character)
