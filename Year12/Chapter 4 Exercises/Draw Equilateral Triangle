import turtle

def draw_equitriangle(t, sz):
 for i in range(3):
     t.forward(sz)
     t.left(120)

wn = turtle.Screen()        # Set up the window and its attributes
wn.bgcolor("lightgreen")
wn.title("Alex meets a function")

t = turtle.Turtle()      # Create alex
size = 50
draw_equitriangle(t, size)

wn.mainloop()
