import turtle

def draw_square(t, sz):
 for i in range(4):
     t.forward(sz)
     t.left(90)

def next_square(t, fz):
 for i in range(1):
    t.right(20)





wn = turtle.Screen()        # Set up the window and its attributes
wn.bgcolor("lightgreen")
wn.title("Alex meets a function")

t = turtle.Turtle()      # Create alex
size = 80
for i in range(18):
    draw_square(t, size)
    next_square(t, size)

wn.mainloop()
