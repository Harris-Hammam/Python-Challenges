import turtle

def draw_square(t, side):
 for i in range(100):
   side = side + 4
   t.forward(side)
   t.left(90)

wn = turtle.Screen()        # Set up the window and its attributes
wn.bgcolor("lightgreen")
wn.title("Alex meets a function")

t = turtle.Turtle()
side=400

size = 5
for i in range(100):
    draw_square(t, size)

wn.mainloop()
